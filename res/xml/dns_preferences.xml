<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:custom="http://schemas.android.com/apk/res/org.jitsi" >
    <PreferenceCategory
        android:title="@string/plugin.dnsconfig.PARALLEL_DNS"
        android:key="@string/pref_cat_dns_parallel_dns">
        <org.jitsi.android.gui.settings.widget.ConfigCheckBox
            android:title="@string/plugin.dnsconfig.chkBackupDnsEnabled.text"
            android:key="@string/pref_key_dns_backup_dns_enabled"
            custom:storeInNewThread="true"
            android:defaultValue="true"
            />
        <org.jitsi.android.gui.settings.widget.ConfigEditText
            android:title="@string/plugin.dnsconfig.lblBackupResolver.text"
            android:key="@string/pref_key_dns_backup_resolver"
            android:dependency="@string/pref_key_dns_backup_dns_enabled"
            android:defaultValue="backup-resolver.jitsi.net"
            custom:storeInNewThread="true"
            />
        <org.jitsi.android.gui.settings.widget.ConfigEditText
            android:title="@string/plugin.dnsconfig.lblBackupResolverFallbackIP.text"
            android:key="@string/pref_key_dns_backup_resolver_fallback_ip"
            android:dependency="@string/pref_key_dns_backup_dns_enabled"
            custom:storeInNewThread="true"
            />
        <org.jitsi.android.gui.settings.widget.ConfigEditText
            android:title="@string/plugin.dnsconfig.lblBackupPort.text"
            android:key="@string/pref_key_dns_backup_port"
            android:dependency="@string/pref_key_dns_backup_dns_enabled"
            android:inputType="number"
            android:defaultValue="53"
            custom:intMax="65535"
            custom:intMin="0"
            custom:storeInNewThread="true"
            />
        <org.jitsi.android.gui.settings.widget.ConfigEditText
            android:title="@string/plugin.dnsconfig.lblPatience.text"
            android:summary="@string/plugin.dnsconfig.lblPatience.description"
            android:key="@string/pref_key_dns_backup_patience"
            android:dependency="@string/pref_key_dns_backup_dns_enabled"
            android:inputType="number"
            android:defaultValue="1500"
            custom:storeInNewThread="true"
            custom:mapSummary="false"
            />
        <org.jitsi.android.gui.settings.widget.ConfigEditText
            android:title="@string/plugin.dnsconfig.lblRedemption.text"
            android:summary="@string/plugin.dnsconfig.lblRedemption.description"
            android:key="@string/pref_key_dns_backup_redemption"
            android:dependency="@string/pref_key_dns_backup_dns_enabled"
            android:inputType="number"
            android:defaultValue="3"
            custom:storeInNewThread="true"
            custom:mapSummary="false"
            />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/plugin.dnsconfig.DNSSEC"
        android:key="@string/pref_cat_dns_dnssec">
        <org.jitsi.android.gui.settings.widget.ConfigCheckBox
            android:title="@string/plugin.dnsconfig.dnssec.chkAbsolute"
            android:key="@string/pref_key_dns_dnssec_absolute"
            android:defaultValue="false"
            />
        <org.jitsi.android.gui.settings.widget.ConfigCheckBox
            android:title="@string/plugin.dnsconfig.dnssec.chkEnabled"
            android:summary="@string/plugin.dnsconfig.dnssec.RESTART_WARNING"
            android:key="@string/pref_key_dns_dnssec_enabled"
            android:defaultValue="false"
            />
        <org.jitsi.android.gui.settings.widget.ConfigEditText
            android:title="@string/plugin.dnsconfig.dnssec.lblNameservers"
            android:summary="@string/plugin.dnsconfig.dnssec.lblNameserversHint"
            android:key="@string/pref_key_dns_dnssec_nameservers"
            android:dependency="@string/pref_key_dns_dnssec_enabled"
            custom:mapSummary="false"
            />
        <org.jitsi.android.gui.settings.widget.ConfigListPreference
            android:title="@string/plugin.dnsconfig.dnssec.lblDefault"
            android:key="@string/pref_key_dns_dnssec_default_behaviour"
            android:entries="@array/pref_dnssec_default_behaviour"
            android:entryValues="@array/pref_dnssec_default_behaviour_values"
            android:defaultValue="WarnIfBogus"
            android:dependency="@string/pref_key_dns_dnssec_enabled"
            />
    </PreferenceCategory>
</PreferenceScreen>